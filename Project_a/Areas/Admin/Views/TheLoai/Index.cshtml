
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <form asp-action="Search" method="get">
        <input type="text" name="search" placeholder="Nhập thể loại cần tìm .." value="@ViewBag.Search" />
        <input type="submit" value="Tìm kiếm" />


    </form>
    <table class="table">
        <thead>
            <tr>
            <th>Tên Thể Loại: </th>
            <th>Ngày tạo</th>
            <th>Chức Năng</th>
            </tr>
        </thead>
        @foreach(var item in ViewBag.TheLoai)
        {
            <tbody>
                <tr>
                    <td width="30%">
                        @item.Name
                    </td>
                    <td width="30%">
                        @String.Format("{0:dd/MM/yyyy}",item.DateCreated)
                    </td>
                    <td width="40%">
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="details" asp-route-id="@item.Id">Detail</a>

                        <a asp-action="Deleted" asp-route-id="@item.Id">Deleted</a>

                    </td>
                </tr>
                
            </tbody>
        }
    </table>
    <a asp-controller="TheLoai" asp-action="Create" class="btn btn-primary">Thêm Mới</a>
</div>

