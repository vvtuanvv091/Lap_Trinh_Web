@model LopHoc

<div class="container">
    <h3>Thêm lớp mới</h3>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post">
        <lable asp-for="Name">Tên lớp </lable>
        <input asp-for="Name" type="text" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <br />

        <lable asp-for="ngaynhaptruongd">Ngày nhập học </lable>
        <input asp-for="ngaynhaptruong" type="date" class="form-control" />
        <span asp-validation-for="ngaynhaptruong" class="text-danger"></span>
        <br />

        <lable asp-for="ngayratruong">Ngày ra trường </lable>
        <input asp-for="ngayratruong" type="date" class="form-control" />
        <span asp-validation-for="ngayratruong" class="text-danger"></span>
        <br />

        <lable asp-for="Soluong">Số lượng học sinh </lable>
        <input asp-for="Soluong" type="number" class="form-control" />
        <span asp-validation-for="Soluong" class="text-danger"></span>
        <br />

        <button type="submit" class="btn btn-primary">Tạo mới</button>
    </form>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
